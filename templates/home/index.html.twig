{% extends 'base.html.twig' %}

{% block body %}
<nav>
	<div class="logo">
		<a href="/">Manga<em>theque</em></a>
	</div>
	<div class="menu-icon">
	<span></span>
  </div>
</nav>

<div id="video-container">
	<div class="video-overlay"></div>
	<div class="video-content">
		<div class="inner">
		  <h1>Bienvenue sur <em>mangatheque</em></h1>
		  <p>SITE SPECIALISE DANS LES MANGAS</p>
			<div class="scroll-icon">
				<a class="scrollTo" data-scrollTo="portfolio" href="#"><img src="img/scroll-icon.png" alt=""></a>
			</div>
		</div>
	</div>
</div>
<div class="full-screen-portfolio" id="portfolio">
	<div class="container-fluid">
		<h1>Dernières nouveautés</h1>
		{% for manga in mangas %}
			<div class="col-md-4 col-sm-6">
				<div class="portfolio-item">
					<a href="Images/Manga/{{ manga.image }}" data-lightbox="image-1">
						<div class="thumb">
							<div class="hover-effect">
								<div class="hover-content">
									<a href="{{ path('show_Manga',{id: manga.id}) }}"><h1>{{ manga.PrixManga }}€</h1></a>
									<p>{{ manga.DescriptionManga }}</p>
								</div>
							</div>
							<div class="image">
								<img src="Images/Manga/{{ manga.image }}">
							</div>
						</div>
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
{% endblock %}